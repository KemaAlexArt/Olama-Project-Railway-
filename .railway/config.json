{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "/app/start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "scaling": {
    "min": 1,
    "max": 1,
    "autoscaling": false
  },
  "resources": {
    "memory": "8192MB",
    "cpu": 2
  }
}
